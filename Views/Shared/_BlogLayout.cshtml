        .page-link {
            text-decoration: none;
            color: #333 !important;
            font-size: 1rem;
            display: inline-block;
            padding: 8px 12px;
            background-color: transparent !important;
            border: 1px solid #ccc;
            border-radius: 50px;
            transition: background-color 0.3s ease, color 0.3s ease;
            /* Tüm tarayıcı outline'larını kaldır */
            outline: none !important;
            -webkit-tap-highlight-color: transparent;
        }

            .page-link:hover {
                color: #555 !important;
                background-color: #f1f1f1 !important;
                border-color: #ccc;
                outline: none !important;
                text-decoration: none !important;
            }

        .page-item.active .page-link {
            color: #000 !important;
            background-color: #e9ecef !important;
            border-color: #ccc !important;
            /* Aktif durumdaki tüm mavi stilleri kaldır */
            outline: none !important;
            box-shadow: none !important;
        }

        .page-item.disabled .page-link {
            color: #ccc !important;
            background-color: transparent !important;
            border-color: #ddd;
            cursor: not-allowed;
        }

        .page-link:focus,
        .page-link:active,
        .page-link:focus-visible {
            outline: none !important;
            box-shadow: none !important;
            background-color: #f1f1f1 !important;
            color: #555 !important;
            border-color: #ccc !important;
            text-decoration: none !important;
        }

        /* Bootstrap'in varsayılan mavi rengini geçersiz kıl */
        .pagination .page-link:not(:disabled):not(.disabled):active,
        .pagination .page-link:not(:disabled):not(.disabled).active {
            background-color: #e9ecef !important;
            border-color: #ccc !important;
            color: #000 !important;
        }

        /* Webkit tarayıcılar için tap highlight'ı kaldır */
        * {
            -webkit-tap-highlight-color: transparent !important;
        }

        }
    </style>

