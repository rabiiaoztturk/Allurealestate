        <body>
            <section class="property">
                <div class="container">
                    <div class="property__header">
                        <div class="property__header-container">
                            <!-- Başlık ve Yer -->
                            <div class="property__main">
                                <div class="property__meta">
                                    @if (@Model.UnderConstruction)
                                    {
                                        <span class="badge badge-warning">Under Construction</span>
                                    }
                                    <span class="property__offer for-sale">For Sale</span>
                                </div>
                                <br />
                                <h1 class="property__name">@Model.Title</h1>
                                <span class="property__address">
                                    <i class="fa fa-map-marker"></i> @Model.Location
                                </span>
                            </div>

                            <!-- Fiyat ve Detaylar -->
                            <div class="property__details">
                                <div class="property__divider"></div>

                                <div class="property__stat-container">
                                    <span class="property__figure">@Model.Area Sqm</span>
                                    <span class="property__label">START FROM</span>
                                </div>

                                <div class="property__divider"></div>

                                <div class="property__price-container">
                                    <span class="property__price">$ @Model.Price.ToString("N2")</span>
                                    <span class="property__price-label">START FROM</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <style>
                .badge {
                    font-size: 0.8rem;
                    padding: 5px 10px;
                    border-radius: 20px;
                    text-transform: uppercase;
                }

                .badge-warning {
                    background-color: #6c757d !important;
                    color: #fff !important;
                }
              /*   .badge-top-right {
                    position: absolute;
                    top: 10px;
                    right: 10px;
                    background-color: #6c757d !important;
                    color: #fff !important;
                    padding: 5px 10px;
                    border-radius: 5px;
                    font-size: 12px;
                } */

                .property__offer.for-sale {
                    background-color: #ffc107 !important; /* Arka planı sarı yap */
                    color: #333; /* Yazı rengini koyu gri yap */
                }
                .property__header-container {
                    display: flex;
                    align-items: center; /* Dikey hizalama */
                    justify-content: space-between; /* Alanları birbirinden ayır */
                    gap: 20px; /* Aralarındaki boşluk */
                }

                .property__main {
                    flex: 1 1 auto; /* Başlık alanının esnek genişlemesini sağlar */
                    min-width: 0; /* Flexbox içindeki taşmayı engeller */
                }

                .property__details {
                    display: flex;
                    flex-shrink: 0; /* Detay kısmının küçülmesini engeller */
                    text-align: right; /* Detayları sağa hizala */
                    gap: 20px;
                }

                .property__name {
                    font-size: 18px; /* Başlık boyutu */
                    font-weight: bold; /* Kalın yazı */
                    margin: 0; /* Varsayılan boşluğu kaldır */
                    white-space: normal; /* Tek satırda tut */
                    overflow: hidden; /* Taşan metni gizle */
                    text-overflow: ellipsis; /* Uzun metni "..." ile göster */
                }

                Açıklamalar:


                .property__address {
                    display: block; /* Adresi alt satıra at */
                    font-size: 14px;
                    color: #999; /* Daha açık renk */
                }

                .property__stat-container,
                .property__price-container {
                    display: flex;
                    flex-direction: column; /* Dik yazılar */
                    align-items: flex-end; /* Sağda hizala */
                }

                .property__divider {
                    width: 1px;
                    height: 40px;
                    background-color: #ccc;
                    margin: 0 10px;
                }

            </style>

            <div class="row row-lg-50 row-35 offset-top-2">
                <div class="col-md-12 wow-outer">
                    <article class="property-detail wow slideInLeft">
                        <div class="property-content">
                            <!-- Sol Taraf: Carousel -->
                            <div class="album-container">
                                @if (Model.ImageUrls?.Count > 0)
                                {
                                    <div id="imageCarousel_@Model.Id" class="carousel slide carousel-fade album-carousel" data-bs-ride="carousel">
                                        <div class="carousel-inner">
                                            @for (int i = 0; i < Model.ImageUrls.Count; i++)
                                            {
                                                <div class="carousel-item @(i == 0 ? "active" : "")">
                                                    <img src="@Model.ImageUrls[i]" alt="@Model.Title" loading="lazy" class="d-block w-100 album-carousel-img" id="carouselImage_@i" />
                                                </div>
                                            }
                                        </div>

                                        <!-- Sol Ok Butonu (Previous) -->
                                        <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel_@Model.Id" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>

                                        <!-- Sağ Ok Butonu (Next) -->
                                        <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel_@Model.Id" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>

                                    <!-- Büyük Fotoğraflar Butonu (Mega Photo) -->
                                    <div class="text-center mt-3">
                                        <button class="btn btn-secondary" onclick="openFullscreenGallery()">
                                            <span class="bi bi-search" style="display: inline-block; vertical-align: middle; margin-right: 10px;"></span> Mega Photo
                                        </button>
                                    </div>

                                    <!-- Galeri: Küçük Fotoğraflar -->
                                    <div id="image-gallery" class="image-gallery mt-4 d-flex justify-content-center flex-wrap">
                                        <!-- Fotoğraflar burada dinamik olarak yüklenecek -->
                                    </div>

                                    <!-- Sayfalama Butonları -->
                                    <div class="pagination-buttons text-center mt-3">
                                        <button class="btn btn-secondary" onclick="changePage(-1)">&#8592;</button> <!-- Sol ok işareti -->
                                        <button class="btn btn-secondary" onclick="changePage(1)">&#8594;</button> <!-- Sağ ok işareti -->
                                    </div>

                                    <!-- Tam Ekran Galeri Modal -->
                                    <div id="fullscreenGallery" class="fullscreen-gallery">
                                        <span class="close-gallery" onclick="closeFullscreenGallery()">&times;</span>
                                        <div class="fullscreen-carousel">
                                            @for (int i = 0; i < Model.ImageUrls.Count; i++)
                                            {
                                                <div class="fullscreen-slide @(i == 0 ? "active" : "")">
                                                    <img src="@Model.ImageUrls[i]" alt="@Model.Title" />
                                                </div>
                                            }
                                            <!-- Tam Ekran Galeri için OK butonları -->
                                            <button class="fullscreen-prev" onclick="changeFullscreenSlide(-1)">&#8592;</button> <!-- Sol ok işareti -->
                                            <button class="fullscreen-next" onclick="changeFullscreenSlide(1)">&#8594;</button> <!-- Sağ ok işareti -->
                                        </div>
                                    </div>

                                }
                            </div>
                            <div class="container">
                                <div class="details-section">
                                    <h3 class="section-title" style="color: black;">Property Details</h3>
                                    <hr />
                                    <div class="details-content">
                                        <ul class="details-list">
                                            <li class="details-item" style="color: black;">
                                                <i class="fa fa-home details-icon" style="color: black;"></i>
                                                <span>Property ID: </span> ARE-@Model.PropertyId
                                            </li>
                                            <li class="details-item" style="color: black;">
                                                <i class="fa fa-home details-icon" style="color: black;"></i>
                                                <span>Rooms: </span> @Model.Rooms
                                            </li>
                                            <li class="details-item" style="color: black;">
                                                <i class="fa fa-bath details-icon" style="color: black;"></i>
                                                <span>Bathrooms: </span> @Model.Bathrooms
                                            </li>
                                            <li class="details-item" style="color: black;">
                                                <i class="fa fa-map-marker details-icon" style="color: black;"></i>
                                                <span>Location: </span> @Model.Location
                                            </li>
                                            <li class="details-item" style="color: black;">
                                                <i class="fa fa-dollar details-icon" style="color: black;"></i>
                                                <span>Price: </span> Start From <strong>$ @Model.Price.ToString("N2")</strong>
                                            </li>
                                        </ul>
                                    </div>
                                </div>

                                <div class="description-section">
                                    <h3 class="section-title" style="color: black;">Property Description</h3>
                                    <hr />
                                    <div class="description-content" style="color: black;">
                                        <strong><u>Information about the project:</u></strong>
                                        <p style="white-space: pre-wrap;">@Model.Description</p>
                                    </div>
                                </div>
                            </div>


