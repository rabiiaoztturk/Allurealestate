<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css" rel="stylesheet">
    @RenderSection("Styles", false)
</head>
<body>
    <header class="p-3 bg-dark text-white">
        <div class="container">
            <!-- Navbar Başlangıcı -->
            <nav class="navbar navbar-expand-lg navbar-dark">
                <a href="/Admin/Dashboard" class="navbar-brand" style="font-size: 24px;">
                    <i class="bi bi-person-circle me-2"></i> Dashboard
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a href="/Admin/Dashboard" class="nav-link px-2 text-white">Houses</a>
                        </li>
                        <li class="nav-item">
                            <a href="/Admin/Blog" class="nav-link px-2 text-white">Blogs</a>
                        </li>
                    </ul>
                    <div class="d-flex ms-lg-3">
                        <a href="/Admin/AddForm" class="btn btn-success me-2">
                            add new house <i class="bi bi-house-add"></i>
                        </a>
                        <a href="/" class="btn btn-light text-dark">
                            return to site <i class="bi bi-arrow-return-left"></i>
                        </a>
                    </div>
                </div>
            </nav>
            <!-- Navbar Bitişi -->
        </div>
    </header>

    <div class="container py-4">
        @RenderBody()
    </div>

    @RenderSection("Scripts", false)
</body>
</html>