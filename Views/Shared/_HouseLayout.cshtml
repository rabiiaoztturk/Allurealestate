                .carousel-indicators .active {
                    background-color: #0056b3;
                }

                /* Flexbox düzenleme */
                .d-flex {
                    display: flex !important;
                }

                .align-items-stretch {
                    align-items: stretch !important;
                }

                .flex-column {
                    flex-direction: column !important;
                }

                .mt-auto {
                    margin-top: auto !important;
                }

            </style>

            <!-- Pagination -->
            <br />
            <nav aria-label="Page navigation example">
                <ul class="pagination">
                    @if (page > 1)
