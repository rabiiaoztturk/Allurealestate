                }

                .carousel-inner img {
                    height: 180px;
                    object-fit: cover;
                }

                .carousel-control-prev, .carousel-control-next {
                    color: #333;
                }

                .carousel-control-prev-icon, .carousel-control-next-icon {
                    background-color: rgba(0, 0, 0, 0.5);
                    border-radius: 50%;
                }

