                        <script>
                            let currentPage = 1;
                            const imagesPerPage = 10;

                            // Fotoğrafları sayfalara ayır
                            function displayImages() {
                                const imageContainer = document.getElementById('image-gallery');
                                const startIndex = (currentPage - 1) * imagesPerPage;
                                const endIndex = startIndex + imagesPerPage;
                                const imagesToDisplay = @Html.Raw(Json.Serialize(Model.ImageUrls))
                                                                                    .slice(startIndex, endIndex);

                                imageContainer.innerHTML = '';  // Önceki fotoğrafları temizle
                                imagesToDisplay.forEach((image, index) => {
                                    const imgElement = document.createElement('img');
                                    imgElement.src = image;
                                    imgElement.classList.add('gallery-thumbnail');
                                    imgElement.setAttribute('onclick', `changeImage(${startIndex + index})`);
                                    const container = document.createElement('div');
                                    container.classList.add('gallery-thumbnail-container');
                                    container.appendChild(imgElement);
                                    imageContainer.appendChild(container);
                                });
                            }

                            function openFullscreenGallery() {
                                const gallery = document.getElementById('fullscreenGallery');
                                gallery.style.display = 'block';  // Tam ekran galeriyi göster
                            }

                            function closeFullscreenGallery() {
                                const gallery = document.getElementById('fullscreenGallery');
                                gallery.style.display = 'none';  // Tam ekran galeriyi gizle
                            }
                            function openFullscreenGallery() {
                                // Tam ekran galeriyi aç
                                document.getElementById('fullscreenGallery').style.display = 'block';

                                // Aktif carousel item'ı bul
                                const activeCarouselItem = document.querySelector('.carousel-item.active');
                                const activeIndex = Array.from(activeCarouselItem.parentNode.children).indexOf(activeCarouselItem);

                                // Fullscreen galeriye aktif index ile geçiş yap
                                changeFullscreenSlide(activeIndex);
                            }

                            function closeFullscreenGallery() {
                                // Tam ekran galeriyi kapat
                                document.getElementById('fullscreenGallery').style.display = 'none';
                            }

                            function changeFullscreenSlide(index) {
                                const slides = document.querySelectorAll('.fullscreen-slide');
                                const totalSlides = slides.length;

                                // Tüm slide'ları gizle
                                slides.forEach(slide => slide.classList.remove('active'));

                                // Geçerli slide'ı aktif yap
                                slides[index].classList.add('active');
                            }

                            // Tam ekran galeri içinde resim değiştir
                            function changeFullscreenSlide(direction) {
                                const slides = document.querySelectorAll('.fullscreen-slide');
                                let currentSlide = Array.from(slides).findIndex(slide => slide.classList.contains('active'));

                                // Yeni slaytı hesapla
                                let newSlide = currentSlide + direction;
                                if (newSlide < 0) newSlide = slides.length - 1;
                                if (newSlide >= slides.length) newSlide = 0;

                                // Tüm slaytlardan active sınıfını kaldır
                                slides.forEach(slide => slide.classList.remove('active'));
                                slides[newSlide].classList.add('active');
                            }


                            // Fotoğrafı değiştirme fonksiyonu
                            function changeImage(index) {
                                const carouselItems = document.querySelectorAll('.carousel-item');
                                carouselItems.forEach(item => item.classList.remove('active'));
                                const targetItem = carouselItems[index];
                                targetItem.classList.add('active');
                            }

                            // Sayfa değiştirme fonksiyonu
                            function changePage(direction) {
                                currentPage += direction;
                                const totalPages = Math.ceil(@Model.ImageUrls.Count() / imagesPerPage);
                                                                                if (currentPage < 1) currentPage = 1;
                                if (currentPage > totalPages) currentPage = totalPages;
                                displayImages();
                            }

                            // İlk sayfayı göster
                            displayImages();
                        </script>
